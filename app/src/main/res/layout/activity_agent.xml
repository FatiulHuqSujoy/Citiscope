<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_agent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sujoy.citi1.UI.AgentActivity"
    android:background="@color/CitiBackground"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frmTitleAgent">

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Agent Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtAgentCaption"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@android:color/holo_orange_light"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/txtAgentName"
                        android:text="lala"
                        android:textAllCaps="false"
                        android:textColor="@android:color/background_light"
                        android:textSize="36sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:singleLine="true" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:text="Bookmark"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/btnAgentBkmark"
                android:background="@color/CitiFont"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <TextView
                    android:text="Call"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAgentPhn1Txt"
                    android:textColorLink="?android:attr/colorForegroundInverse"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

                <TextView
                    android:text="0101010101"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtAgentPhone1"
                    android:layout_weight="0.95"
                    android:clickable="true"
                    android:textColor="@color/CitiFont"
                    android:textSize="20sp"
                    android:layout_height="25dp"
                    android:autoLink="phone"
                    android:textColorLink="@color/CitiFont" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <TextView
                    android:text="Call"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAgentPhn2Txt"
                    android:textColorLink="?android:attr/colorForegroundInverse"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:layout_width="100dp" />

                <TextView
                    android:text="1010101010"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtAgentPhone2"
                    android:layout_weight="0.99"
                    android:clickable="true"
                    android:textColor="@color/CitiFont"
                    android:textSize="20sp"
                    android:layout_height="25dp"
                    android:autoLink="phone"
                    android:textColorLink="@color/CitiFont" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <TextView
                    android:text="Mail"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAgentEmailTxt"
                    android:textColorLink="?android:attr/colorForegroundInverse"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:layout_width="100dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:text="abc@gmail.com"
                            android:layout_width="match_parent"
                            android:id="@+id/txtAgentEmail"
                            android:layout_weight="1.33"
                            android:clickable="true"
                            android:textColor="@color/CitiFont"
                            android:textSize="20sp"
                            android:layout_height="wrap_content"
                            android:autoLink="email"
                            android:textColorLink="@color/CitiFont"
                            android:singleLine="true" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <TextView
                    android:text="Browse"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAgentLinkTxt"
                    android:textColorLink="?android:attr/colorForegroundInverse"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp"
                    android:layout_width="100dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:text="www.google.com"
                            android:layout_width="match_parent"
                            android:id="@+id/txtAgentLink"
                            android:layout_weight="1.61"
                            android:clickable="true"
                            android:textColor="@color/CitiFont"
                            android:textSize="20sp"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:textColorLink="@color/CitiFont"
                            android:singleLine="true" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <TextView
                    android:text="Locate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAgentMapTxt"
                    android:textColorLink="?android:attr/colorForegroundInverse"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:text="Dhaka, Bangladesh"
                            android:layout_width="match_parent"
                            android:id="@+id/txtAgentMap"
                            android:layout_weight="1.19"
                            android:clickable="true"
                            android:textColor="@color/CitiFont"
                            android:textSize="20sp"
                            android:layout_height="wrap_content"
                            android:textColorLink="@color/CitiFont"
                            android:singleLine="true" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
